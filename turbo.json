{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "fmt"],
      "outputs": ["apps/**/build", "packages/**/dist"],
      "outputMode": "hash-only"
    },
    "fmt": {},
    "dev": {
      "cache": false
    },
    "@jet-lab/fixed-term#build": {
      "dependsOn": ["@jet-lab/margin#build", "wasm-src#build"]
    }
  }
}

{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2020",
    "lib": ["es2022"],
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["../libraries/ts/**/*", "../tests/integration/**/*"],
  "exclude": ["../**/dist/**/*"]
}

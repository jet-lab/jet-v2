    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "es2021"],
    "jsx": "react-jsx",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["./src/", "./public"]
}

{
  "name": "@jet-lab/margin",
  "version": "0.2.22",
  "description": "Library for interacting with the Jet margin on-chain programs",
  "keywords": [
    "solana",
    "jet",
    "protocol",
    "blockchain"
  ],
  "module": "./dist/esm/index.js",
  "main": "./dist/cjs/index.js",
  "license": "AGPL-3.0-or-later",
  "homepage": "https://github.com/jet-lab/jet-v2/tree/master/libraries/ts/#readme",
  "bugs": {
    "url": "https://github.com/jet-lab/jet-v2/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jet-lab/jet-v2.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=11"
  },
  "scripts": {
    "clean": "rimraf dist/",
    "build": "yarn build:tsc",
    "build:with-wasm": "yarn build:wasm && yarn build:tsc",
    "build:wasm": "wasm-pack build --target nodejs ./wasm-utils ; copyfiles -u 1 wasm-utils/pkg/* dist/wasm-utils",
    "build:tsc": "tsc & tsc -p tsconfig-cjs.json ; wait",
    "watch": "yarn watch:wasm & yarn watch:tsc",
    "watch:wasm": "cargo watch -w 'libraries/ts/margin/wasm-utils/src'  -w 'libraries/ts/margin/wasm-utils/Cargo.toml' -s 'wasm-pack build --target nodejs libraries/ts/margin/wasm-utils' -s 'copyfiles -u 4 libraries/ts/margin/wasm-utils/pkg/* libraries/ts/margin/dist/wasm-utils'",
    "watch:tsc": "tsc --watch --preserveWatchOutput --pretty & tsc -p tsconfig-cjs.json --watch --preserveWatchOutput --pretty",
    "copy:wasm": "copyfiles -u 1 wasm-utils/pkg/* dist/wasm-utils",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "prepublish": "yarn build:wasm && yarn build"
  },
  "dependencies": {
    "@project-serum/anchor": "0.24.2",
    "@project-serum/serum": "^0.13.65",
    "@pythnetwork/client": "^2.7.0",
    "@solana/buffer-layout": "^4.0.0",
    "@solana/spl-token": "^0.2.0",
    "@solana/web3.js": "^1.63.0",
    "assert": "^2.0.0",
    "axios": "^0.27.2",
    "bs58": "^5.0.0"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/bn.js": "^5.1.0",
    "copyfiles": "^2.4.1",
    "rimraf": "^3.0.2",
    "typedoc": "^0.23.14",
    "typescript": "4.6.4",
    "wasm-pack": "^0.10.3"
  }
}

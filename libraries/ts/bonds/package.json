{
  "name": "@jet-lab/jet-bonds-client",
  "version": "0.1.0",
  "description": "Library for interacting with the Jet Bonds on-chain programs",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "build": "yarn build:wasm && yarn build:tsc",
    "build:tsc": "tsc & tsc -p tsconfig-cjs.json; wait",
    "build:wasm": "make build-wasm",
    "build:wasm-esm": "make build-esm",
    "clean": "rm -rf ./dist & rm -rf ./wasm-utils/pkg",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "prepublish": "yarn build",
    "watch": "yarn watch:wasm & yarn watch:tsc",
    "watch:tsc": "tsc --watch --preserveWatchOutput --pretty",
    "watch:wasm": "cargo watch -w 'libraries/ts/bonds/wasm-utils/src'  -w 'libraries/ts/bonds/wasm-utils/Cargo.toml' -s 'yarn --cwd libraries/ts/bonds/ build:wasm-esm'"
  },
  "dependencies": {
    "@jet-lab/margin": "*",
    "@project-serum/anchor": "0.24.2",
    "@project-serum/serum": "^0.13.65",
    "@solana/spl-token": "^0.2.0",
    "@solana/web3.js": "^1.63.0"
  },
  "devDependencies": {
    "prettier": "^2.3.2",
    "tslint": "^6.1.3",
    "typescript": "4.6.4",
    "wasm-pack": "^0.10.3"
  },
  "files": [
    "dist",
    "tsconfig.json",
    "tsconfig-cjs.json",
    "wasm-utils/pkg/*",
    "src"
  ]
}

{
  "name": "@jet-lab/jet-bonds-client",
  "version": "0.1.0",
  "description": "Library for interacting with the Jet Bonds on-chain programs",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "clean": "rimraf dist/",
    "build": "yarn build:wasm && yarn build:tsc",
    "build:wasm": "wasm-pack build --target nodejs ./wasm-utils ; copyfiles -u 1 wasm-utils/pkg/* dist/wasm-utils",
    "build:tsc": "tsc & tsc -p tsconfig-cjs.json ; wait",
    "watch": "(trap 'kill 0' SIGINT; yarn watch:wasm & yarn watch:tsc)",
    "watch:wasm": "cargo watch -i .gitignore -i 'libraries/ts/bonds/dist/wasm-utils/pkg/*' -s 'wasm-pack build --target nodejs libraries/ts/bonds/wasm-utils' -s 'copyfiles -u 4 libraries/ts/bonds/wasm-utils/pkg/* libraries/ts/bonds/dist/wasm-utils'",
    "watch:tsc": "(trap 'kill 0' SIGINT; tsc --watch --preserveWatchOutput --pretty & tsc -p tsconfig-cjs.json --watch --preserveWatchOutput --pretty)",
    "copy:wasm": "copyfiles -u 1 wasm-utils/pkg/* dist/wasm-utils",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "prepublish": "yarn build:wasm && yarn build"
  },
  "dependencies": {
    "@jet-lab/margin": "*",
    "@project-serum/anchor": "0.24.2",
    "@project-serum/serum": "^0.13.65",
    "@solana/spl-token": "^0.2.0",
    "@solana/web3.js": "^1.63.0"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "typescript": "4.6.4",
    "wasm-pack": "0.10.1"
  },
  "files": [
    "dist",
    "tsconfig.json",
    "tsconfig-cjs.json",
    "wasm-utils/pkg/*",
    "src"
  ]
}

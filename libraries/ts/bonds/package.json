{
  "name": "@jet-lab/jet-bonds-client",
  "version": "0.1.0",
  "description": "Library for interacting with the Jet Bonds on-chain programs",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "build": "make build",
    "clean": "rm -rf ./dist & rm -rf ./src/wasm-utils",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "prepublishOnly": "yarn build",
    "watch": "yarn watch:wasm & yarn watch:tsc",
    "watch:tsc": "tsc --watch --preserveWatchOutput --pretty & tsc -p tsconfig-cjs.json --watch --preserveWatchOutput --pretty",
    "watch:wasm": "cargo watch -w 'libraries/ts/bonds/wasm-utils/src'  -w 'libraries/ts/bonds/wasm-utils/Cargo.toml' -s 'wasm-pack build --target bundler libraries/ts/bonds/wasm-utils --out-dir libraries/ts/bonds/src/wasm-utils'"
  },
  "dependencies": {
    "@jet-lab/margin": "*",
    "@project-serum/anchor": "0.24.2",
    "@project-serum/serum": "^0.13.65",
    "@solana/spl-token": "^0.2.0",
    "@solana/web3.js": "^1.63.0"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "prettier": "^2.3.2",
    "tslint": "^6.1.3",
    "typescript": "4.6.4",
    "wasm-pack": "^0.10.3"
  },
  "files": [
    "dist",
    "tsconfig.json",
    "tsconfig-cjs.json",
    "src"
  ]
}

{
  "name": "@jet-lab/jet-bonds-client",
  "version": "0.1.0",
  "description": "Library for interacting with the Jet Bonds on-chain programs",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "clean": "rimraf dist/",
    "copy:wasm": "copyfiles -u 1 wasm-utils/pkg/* dist/wasm-utils",
    "build": "tsc -p tsconfig.json && tsc -p tsconfig.cjs.json",
    "build:wasm": "wasm-pack build ./wasm-utils",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "prepublish": "yarn clean && yarn build:wasm && yarn copy:wasm && yarn build && npm pack"
  },
  "dependencies": {
    "@jet-lab/margin": "*",
    "@project-serum/anchor": "0.24.2",
    "@project-serum/serum": "^0.13.65",
    "@solana/spl-token": "^0.2.0",
    "@solana/web3.js": "1.56.2"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "typescript": "4.6.4",
    "wasm-pack": "^0.10.3"
  },
  "files": [
    "dist",
    "tsconfig.json",
    "tsconfig.cjs.json",
    "wasm-utils/pkg/*",
    "src"
  ]
}

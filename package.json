{
  "private": "true",
  "workspaces": [
    "app",
    "libraries/ts"
  ],
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "compile": "npx tsc",
    "fmt": "prettier --check .",
    "fmt:fix": "prettier --write .",
    "lint": "eslint . --ext ts",
    "prepare": "husky install",
    "precommit": "npm run build && npm run fmt:fix && npm run lint && git add .",
    "test": "anchor test --skip-lint -- --features testing",
    "test:devnet": "npx ts-mocha -p ./tsconfig.json -t 1000000 tests/declarative/*.sim.ts",
    "test:nobuild": "anchor test --skip-lint --skip-build -- --features testing",
    "test:gui": "cd app && yarn e2e:gui && cd ../app-beta && yarn e2e:gui"
  },
  "dependencies": {
    "@project-serum/anchor": "0.25.0",
    "@project-serum/serum": "^0.13.65",
    "@pythnetwork/client": "^2.7.0",
    "@solana/spl-token": "^0.2.0",
    "@solana/web3.js": "^1.41.4"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "chai": "^4.3.6",
    "eslint": "^7.32.0",
    "husky": "^8.0.1",
    "mocha": "^10.0.0",
    "prettier": "^2.5.1",
    "ts-mocha": "^10.0.0",
    "typescript": "4.6.4"
  }
}

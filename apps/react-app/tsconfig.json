{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "es2021"],
    "jsx": "react-jsx",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "incremental": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strict": true,
    "paths": {
      "@components/*": ["components/*"],
      "@state/*": ["state/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"],
      "@assets/*": ["assets/*"],
      "@views/*": ["views/*"]
    }
  },
  "include": ["src/**/*", "./public", "@jet-lab/margin", "@jet-lab/jet-client-web"],
  "exclude": ["node_modules"]
}
